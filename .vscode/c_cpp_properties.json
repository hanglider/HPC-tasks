{
  "version": 4,
  "configurations": [
    {
      "name": "macOS-GCC",
      "intelliSenseMode": "macos-gcc-arm64",
      "compilerPath": "/opt/homebrew/bin/g++-15",
      "cStandard": "c17",
      "cppStandard": "c++20",
      "defines": ["_OPENMP"],
      "includePath": [
        "${workspaceFolder}/include",
        "/opt/homebrew/include",
        "/usr/local/include"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}",
          "/opt/homebrew/include",
          "/usr/local/include"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}
